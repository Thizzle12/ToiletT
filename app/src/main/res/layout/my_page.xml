<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:background="#808080">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:typeface="normal"
            android:text="Username"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:id="@+id/profilName"
            android:layout_marginTop="99dp"
            android:layout_alignParentTop="true"
            android:layout_alignEnd="@+id/changeAnim" />

        <ImageButton
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/roundbutton"
            android:id="@+id/spiritAnim"
            android:layout_marginEnd="45dp"
            android:layout_below="@+id/yourUsername"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="42dp"
            android:src="@drawable/crab"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="tryk for at skifte"
            android:textSize="13dp"
            android:textColor="@color/white"
            android:id="@+id/changeAnim"
            android:layout_below="@+id/spiritAnim"
            android:layout_alignEnd="@+id/button" />

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Skift password"
            android:id="@+id/button"
            android:background="@drawable/newbutton"
            android:layout_marginTop="44dp"
            android:layout_below="@+id/changeAnim"
          android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Dit Brugernavn:"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:id="@+id/yourUsername"
            android:layout_alignBottom="@+id/profilName"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Dit Spiritanimal:"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:id="@+id/yourAnim"
            android:layout_below="@+id/yourUsername"
            android:layout_alignParentStart="true"
            android:layout_marginTop="114dp" />

    </RelativeLayout>
</LinearLayout>